---
import { getLangFromUrl } from "../lib/i18n";
import WhatsAppButton from "../components/WhatsAppButton.astro";

interface Props {
  title: string;
  lang?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const {
  title,
  lang: langProp,
  description: customDescription,
  image = "/apple-touch-icon.png",
  canonicalURL,
} = Astro.props;

const lang = langProp || getLangFromUrl(Astro.url);

const siteUrl = "https://argentatreuhand.com";
const currentUrl = new URL(Astro.url.pathname, siteUrl).href;
const canonical = canonicalURL || currentUrl;

const descriptions = {
  es: "Argenta Treuhand - Expertos en impuestos, contabilidad y asesoría empresarial en Zúrich. Personalizados, confiables y eficientes para autónomos y pymes",
  de: "Argenta Treuhand – Ihre Experten für Steuern, Buchhaltung und Unternehmensberatung in Zürich. Persönlich, zuverlässig und effizient für Selbständige und KMU.",
};

const metaDescription =
  customDescription || descriptions[lang] || descriptions.es;

// Generate alternating language links
// Note: This assumes simple path-based localization where /de/... maps to /...
const alternateLangLinks = [
  {
    lang: "es",
    href: new URL(Astro.url.pathname.replace(/^\/de/, "") || "/", siteUrl).href,
  },
  {
    lang: "de",
    href: new URL(
      "/de" + (Astro.url.pathname.replace(/^\/de/, "") || "/"),
      siteUrl,
    ).href,
  },
];
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={metaDescription} />
    <meta
      name="keywords"
      content="Argenta Treuhand, Impuestos, Contabilidad, Asesoría Empresarial, Zúrich, Autónomos, Pymes, Steuern, Buchhaltung, Treuhand, Zürich"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes"
    />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="author" content="Argenta Treuhand" />

    <link rel="canonical" href={canonical} />

    {
      alternateLangLinks.map((link) => (
        <link rel="alternate" hreflang={link.lang} href={link.href} />
      ))
    }
    <link
      rel="alternate"
      hreflang="x-default"
      href={alternateLangLinks.find((l) => l.lang === "es").href}
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:image" content={new URL(image, siteUrl)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonical} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={metaDescription} />
    <meta property="twitter:image" content={new URL(image, siteUrl)} />

    <!-- Favicons and App Icons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <slot />
    <WhatsAppButton lang={lang} />
  </body>
</html>

<style is:global>
  @import "../styles/globals.css";
</style>
