---
export const prerender = true;
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer";
import { fetchBlogPost, formatDate, fetchBlogPosts } from "../../../utils/blog";
import type { BlogPostData } from "../../../types/blog";
import { getLangFromUrl, translations } from "../../../lib/i18n";
import StrapiImage from "../../../components/StrapiImage.astro";

export async function getStaticPaths() {
  try {
    const response = await fetchBlogPosts("de", 1, 100); // Get all posts for static generation
    return response.data.map((post: any) => ({
      params: { slug: post.documentId },
      props: { post: post.documentId },
    }));
  } catch (error) {
    console.error(
      "Error generating static paths for German blog posts:",
      error,
    );
    return [];
  }
}

const { slug } = Astro.params;
let post: BlogPostData | null = null;
let error = null;

if (slug) {
  try {
    post = await fetchBlogPost(slug, "de");
  } catch (err) {
    error = err instanceof Error ? err.message : "Unknown error occurred";
    console.error("Error fetching blog post:", err);
  }
}

if (!post && !error) {
  return Astro.redirect("/de/blog");
}

const lang = getLangFromUrl(Astro.url);
const t = translations[lang];
---

<Layout title={post?.title || "Blog Post"} lang="de">
  <Header />

  <main class="pt-24 md:pt-28">
    <div class="container mx-auto px-4">
      {
        error ? (
          <div class="text-center py-12">
            <div class="text-red-600 mb-4">
              <svg
                class="w-16 h-16 mx-auto mb-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"
                />
              </svg>
              <p class="text-lg font-semibold">
                Fehler beim Laden des Blog-Beitrags
              </p>
              <p class="text-sm text-gray-500 mt-2">{error}</p>
            </div>
            <a href="/de/blog" class="text-brand-teal hover:underline">
              Zurück zum Blog
            </a>
          </div>
        ) : post ? (
          <article class="max-w-[680px] mx-auto pt-4 pb-8">
            <nav class="mb-8">
              <a
                href="/de/blog"
                class="text-brand-teal hover:underline flex items-center"
              >
                <svg
                  class="w-4 h-4 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 19l-7-7 7-7"
                  />
                </svg>
                Zurück zum Blog
              </a>
            </nav>

            <header class="mb-8">
              <h1 class="text-4xl font-bold text-gray-900 mb-4">
                {post.title}
              </h1>

              <div class="flex items-center text-gray-600 mb-6">
                <time datetime={post.customDate || post.publishedAt}>
                  {formatDate(post.customDate || post.publishedAt, "de")}
                </time>
                {post.author && (
                  <>
                    <span class="mx-2">•</span>
                    <span>{post.author}</span>
                  </>
                )}
              </div>

              {post.tags && post.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-6">
                  {post.tags.map((tag) => (
                    <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </header>

            {post.featuredImage && (
              <div class="mb-8 mx-auto max-w-[680px]">
                <StrapiImage
                  image={post.featuredImage}
                  sizes="(max-width: 768px) 100vw, 800px"
                  class="w-full h-auto object-contain rounded-xl shadow-md"
                />
              </div>
            )}

            <div class="prose prose-slate mx-auto">
              <div set:html={post.content} />
            </div>

            {post.image2 && (
              <div class="mt-12 mx-auto max-w-[680px]">
                <StrapiImage
                  image={post.image2}
                  sizes="(max-width: 768px) 100vw, 800px"
                  class="w-full h-auto object-contain rounded-xl shadow-md"
                />
              </div>
            )}

            <footer class="mt-12 pt-8 border-t border-gray-200 mx-auto max-w-[680px]">
              <div class="flex items-center justify-end">
                <a
                  href="/de/blog"
                  class="text-brand-teal hover:underline font-medium"
                >
                  Alle Beiträge anzeigen
                </a>
              </div>
            </footer>
          </article>
        ) : null
      }
    </div>
  </main>

  <Footer lang={lang} />
</Layout>

<style is:global>
  /* Personalización adicional para UX Writing */
  .prose {
    text-align: left;
  }

  .prose img {
    margin-left: auto;
    margin-right: auto;
  }

  .special-note {
    border-left: 4px solid #267272;
    background-color: #f9fafb;
    padding: 1.25rem;
    margin: 2rem 0;
    border-radius: 0 12px 12px 0;
    font-size: 1.125rem;
    color: #374151;
  }
</style>
