---
export const prerender = true;
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer";
import BlogCard from "../../components/BlogCard.astro";
import { fetchBlogPosts, transformBlogPost } from "../../utils/blog";
import type { BlogPostData } from "../../types/blog";
import { getLangFromUrl, translations } from "../../lib/i18n";

// Get current page from URL params
const currentPage = Number(Astro.url.searchParams.get("page")) || 1;
const pageSize = 9;

let blogPosts: BlogPostData[] = [];
let totalPosts = 0;
let totalPages = 0;
let error = null;

try {
  const response = await fetchBlogPosts("de", currentPage, pageSize);
  blogPosts = response.data.map((post) => transformBlogPost(post));
  totalPosts = response.meta.pagination.total;
  totalPages = response.meta.pagination.pageCount;
} catch (err) {
  error = err instanceof Error ? err.message : "Unknown error occurred";
  console.error("Error fetching blog posts:", err);
}

const lang = getLangFromUrl(Astro.url);
const t = translations[lang];
---

<Layout title="Blog - Argenta Treuhand" lang="de">
  <Header />

  <main class="pt-32">
    <div class="container mx-auto px-4">
      {
        error ? (
          <div class="text-center py-12">
            <div class="text-red-600 mb-4">
              <svg
                class="w-16 h-16 mx-auto mb-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"
                />
              </svg>
              <p class="text-lg font-semibold">
                Fehler beim Laden der Blog-Beiträge
              </p>
              <p class="text-sm text-gray-500 mt-2">{error}</p>
            </div>
          </div>
        ) : blogPosts.length === 0 ? (
          <div class="text-center py-12">
            <div class="text-gray-500">
              <svg
                class="w-16 h-16 mx-auto mb-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                />
              </svg>
              <p class="text-lg font-semibold">Noch keine Beiträge vorhanden</p>
              <p class="text-sm mt-2">
                Bald werden hier interessante Artikel erscheinen.
              </p>
            </div>
          </div>
        ) : (
          <>
            <section class="mb-12">
              <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {blogPosts.map((post) => (
                  <BlogCard post={post} lang="de" />
                ))}
              </div>
            </section>

            {totalPages > 1 && (
              <section class="py-8">
                <div class="flex justify-center items-center space-x-2">
                  {currentPage > 1 && (
                    <a
                      href={`/de/blog?page=${currentPage - 1}`}
                      class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors"
                    >
                      Zurück
                    </a>
                  )}

                  <span class="px-4 py-2 text-gray-600">
                    Seite {currentPage} von {totalPages}
                  </span>

                  {currentPage < totalPages && (
                    <a
                      href={`/de/blog?page=${currentPage + 1}`}
                      class="px-4 py-2 bg-brand-teal text-white rounded-lg hover:bg-brand-teal/80 transition-colors"
                    >
                      Weiter
                    </a>
                  )}
                </div>
              </section>
            )}
          </>
        )
      }
    </div>
  </main>

  <Footer lang={lang} />
</Layout>
