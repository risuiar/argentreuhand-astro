        // Mapping para páginas legales
        const legalMapping = {
          "declaracion-de-privacidad": {
            es: "/declaracion-de-privacidad/",
            de: "/de/datenschutz/",
          },
          datenschutz: {
            es: "/declaracion-de-privacidad/",
            de: "/de/datenschutz/",
          },
