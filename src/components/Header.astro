            es: "/condiciones-generales/",
            de: "/de/allgemeine-geschaeftsbedingungen/",
          },
        };

        // 1. Check legal pages
        for (const [key, mapping] of Object.entries(legalMapping)) {
          if (pathname.includes(key)) {
            e.preventDefault();
            window.location.href = mapping[targetLang];
            return;
          }
        }

        // 2. Check blog detail pages
        if (isBlogDetail) {
          e.preventDefault();
          const blogPath = targetLang === "de" ? "/de/blog/" : "/blog/";
          window.location.href = blogPath;
          return;
        }

        // 3. Normal logic for standard pages
        const standardPaths = ["/", "/reservar/", "/blog/"];
        const isStandard = standardPaths.some(
          (p) =>
            pathname === p ||
            pathname === p.replace(/\/$/, "") ||
            pathname === "/de" + p ||
            pathname === "/de" + p.replace(/\/$/, ""),
        );
        const isHash =
          pathname === "/" || pathname === "/de/" || pathname.includes("#");

        if (!isStandard && !isHash) {
          // If we are on an unknown page (could be a 404 or a newly deleted page)
          e.preventDefault();
          window.location.href = targetLang === "de" ? "/de/" : "/";
          return;
        }

        // 4. Default behavior handled by href for standard pages
      });
    });

    // Handle smooth scrolling for anchor links
    const anchorLinks = document.querySelectorAll('a[href^="#"]');
    anchorLinks.forEach((link) => {
      link.addEventListener("click", function (e) {
        const href = this.getAttribute("href");
        if (href && href.startsWith("#")) {
          e.preventDefault();
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);
          if (targetElement) {
            const headerHeight = 104; // Header height + 4px extra space
            const targetPosition = targetElement.offsetTop - headerHeight;
            window.scrollTo({
              top: targetPosition,
              behavior: "smooth",
            });
          }
        }
      });
    });
  });
