// Detectar idioma desde la URL o usar español por defecto
const url = new URL(Astro.request.url);
const pathname = url.pathname;
const currentLang =
  pathname === "/de" || pathname.startsWith("/de/") ? "de" : "es";

// Detectar página actual para estado activo
const isBookingPage = pathname.includes("/reservar");
const isHomePage =
  pathname === "/" || pathname === "/de/" || pathname === "/de";

// Detectar si estamos en una página de detalle del blog
const isBlogDetailPage = pathname.match(/\/blog\/([^\/]+)/);
const blogDocumentId = isBlogDetailPage ? isBlogDetailPage[1] : null;

// Traducciones
const translations = {
  es: {
    nav: {
      inicio: "Inicio",
      servicios: "Servicios",
      sobreNosotros: "Sobre Nosotros",
      blog: "Blog",
      reservar: "Reservar Consulta",
      contacto: "Contacto",
    },
    cta: "Consulta Online",
    ctaSubtext: "Asesoría profesional",
    location: "Zurich, Suiza",
    phone: "+41 76 510 03 80",
    email: "info@argentatreuhand.com",
  },
  de: {
    nav: {
      inicio: "Startseite",
      servicios: "Dienstleistungen",
      sobreNosotros: "Über uns",
      blog: "Blog",
      reservar: "Beratung buchen",
      contacto: "Kontakt",
    },
    cta: "Online Beratung",
    ctaSubtext: "Professionelle Beratung",
    location: "Zürich, Schweiz",
    phone: "+41 76 510 03 80",
    email: "info@argentatreuhand.com",
  },
};

const t = translations[currentLang];

// URLs para cambio de idioma
const getLocalizedUrl = (lang: string) => {
  // Mapping para páginas legales que tienen diferentes slugs
  const legalMapping = {
    "declaracion-de-privacidad": {
      es: "/declaracion-de-privacidad/",
      de: "/de/datenschutz/",
    },
    datenschutz: { es: "/declaracion-de-privacidad/", de: "/de/datenschutz/" },
    "condiciones-generales": {
      es: "/condiciones-generales/",
      de: "/de/allgemeine-geschaeftsbedingungen/",
    },
    "allgemeine-geschaeftsbedingungen": {
      es: "/condiciones-generales/",
      de: "/de/allgemeine-geschaeftsbedingungen/",
    },
  };

  // Buscar si la ruta actual coincide con alguna página legal
  for (const [key, mapping] of Object.entries(legalMapping)) {
    if (pathname.includes(key)) {
      return mapping[lang];
    }
  }

  // Para otras páginas, usar la lógica normal
  const standardPaths = ["/", "/reservar/", "/blog/"];
  const isStandard = standardPaths.some(
    (p) =>
      pathname === p ||
      pathname === p.replace(/\/$/, "") ||
      pathname === "/de" + p ||
      pathname === "/de" + p.replace(/\/$/, ""),
  );
  const isHash =
    pathname === "/" || pathname === "/de/" || pathname.includes("#");

  if (!isStandard && !isHash) {
    return lang === "es" ? "/" : "/de/";
  }

  const isDe = pathname === "/de" || pathname.startsWith("/de/");

  if (lang === "es") {
    return isDe ? pathname.replace(/^\/de/, "") || "/" : pathname;
  } else {
    // Si ya estamos en alemán, mantener la ruta
    if (isDe) return pathname;
    // Si estamos en español, añadir el prefijo /de
    return `/de${pathname === "/" ? "" : pathname}`;
  }
};

// Helper para generar URLs localizadas
const getLocalizedLink = (path: string, lang: string) => {
  if (lang === "de") {
    return path === "/" ? "/de/" : `/de${path}`;
  }
  return path;
};
